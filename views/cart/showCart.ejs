<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" style="margin-top: 5rem;">
    <%- include("../partials/flash")%>
    <h6 class="display-6 lead">My Cart</h6>
    <div class="row">
        <div class="col-lg-8">
            <%for(let item of userCart){%>
            <div class="card mb-3" style="width: 34rem;">
                <div class="row g-0">
                    <div class="col-md-3">
                        <img style="width: 200px; height:auto; object-fit:cover; background-position:center; background-attachment:fixed; background-size:cover;  padding:3px"
                            class="" src="<%=item.img%>" alt="...">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title text-dark text-capitalize"><%=item.name%></h5>
                            <h6 class="card-text text-secondary">â‚¹<%=item.price%></h6>

                            <p class="card-text text-capitalize">This is a wider card with supporting text below as a
                                natural lead-in to additional content. This content is a little bit longer.</p>

                            <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-danger">remove</button>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
            <%}%>

      
      </div>

      <div class="col-lg-4 mb-3">
        <%totalAmount=0%>
            <h5 class="display-6 text-strong mt-1">Products</h6>
                <ul class="list-group list-group-flush lead">

                    <%for(let item of userCart){%>
                    <li class="list-group-item lead "><%=item.name%> - <strong>&#8377; <%=item.price%></strong></li>
                    <%totalAmount+=item.price%>
                    <%}%>
          
        </ul>

        <div class="mt-2">
          <p class="fw-bold">Total Amount :  &#8377; <%=totalAmount%></p>
                    <a href="/user/<%=currentUser._id%>/cart/payment" class="btn btn-outline-secondary">Proceed To Pay</a>
        </div>

    </div>

</div>

</div>


<%- include("../partials/footer")%>