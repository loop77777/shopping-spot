<%- include("../partials/header")%>
<%- include("../partials/navbar")%>
<link rel="stylesheet" href="/css/star.css">

<div class="container mt-5">



    <div class="row">
        <%- include("../partials/flash")%>
        <div class="col-lg-6">
            <div class="card" style="width: 20rem;">
                <img src="<%=product.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%=product.name%></h5>
                    <h5 class="card-title">$<%=product.price%></h5>
                    <p class="card-text"><%=product.desc%></p>
                    <a href="#" class="btn btn-dark">Buy</a>
                    <a href="/products/<%=product._id%>/edit" class="btn btn-outline-warning">Edit</a>
                    <div class="mt-3">
                        <form action="/user/<%=product._id%>/cart" method="POST">
                            <button class="btn btn-secondary">Add To Cart</button>
                        </form>
                    </div>
                    <div class="mt-3">
                        <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-6">

            <form class="needs-validation" action="/products/<%=product._id%>/review" method="POST"
                style="max-width:70%;margin:10px auto" novalidate>
                <h2>Leave a Review</h2>
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>

                <div class="mb-3">
                    <textarea class="form-control" id="comment" cols="35" rows="3" name="comment"
                        placeholder="Write Your Review" required></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">
                        Please Give A Description.
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-secondary">Submit</button>
                <br>
                <br>
                <br>
                <br>

                <%for(let review of product.reviews){%>
                <div class="card bg-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header mt-2 mb-0">

                        <p class="starability-result" data-rating=<%=review.rating%>>
                        </p>
                    </div>
                    <div class="card-body bg-white">
                        <h5 class="card-title light"><%=review.comment%></h5>
                        <br>
                        <p class="card-text text-capitalize text-secondary"><%=review.user%> </p>
                    </div>
                </div>
                <%}%>
                    
            </form>
           
            
           
          
        </div>
       
    </div>

</div>


<%- include("../partials/footer")%>